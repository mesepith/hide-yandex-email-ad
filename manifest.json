{
  "manifest_version": 3,
  "name": "AdBlocker for Yandex Mail",
  "version": "1.0.0",
  "description": "Enjoy a cleaner, ad-free Yandex Mail experience. This extension removes sidebar and in-message ads from all Yandex Mail domains.",
  "content_scripts": [
    {
      "matches": [
        "https://mail.yandex.ru/*",
        "https://mail.yandex.com/*",
        "https://mail.yandex.by/*",
        "https://mail.yandex.kz/*",
        "https://mail.yandex.ua/*",
        "https://mail.yandex.com.tr/*",
        "https://mail.yandex.uz/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}